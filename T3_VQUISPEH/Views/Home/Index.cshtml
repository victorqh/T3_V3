@{
    ViewData["Title"] = "Home Page";
    var nombreUsuario = Context.Session.GetString("UsuarioNombre");
}

<div class="text-center mt-5">
    @if (!string.IsNullOrEmpty(nombreUsuario))
    {
        <h1 class="display-4">¡Bienvenido, @nombreUsuario!</h1>
        <p class="lead mt-3">Has iniciado sesión correctamente.</p>
        <div class="mt-4">
            <a asp-controller="Account" asp-action="Logout" class="btn btn-danger">Cerrar Sesión</a>
        </div>
    }
    else
    {
        <h1 class="display-4">Bienvenido</h1>
        <p>Por favor, <a asp-controller="Account" asp-action="Login">inicia sesión</a> para continuar.</p>
    }
</div>
