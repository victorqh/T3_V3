@model T3_VQUISPEH.Models.Libro
@{
    ViewData["Title"] = "Eliminar Libro";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">Confirmar Eliminación</h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <strong>¿Está seguro de eliminar este libro?</strong>
                        <p class="mb-0">Esta acción no se puede deshacer.</p>
                    </div>

                    <div class="row mb-2">
                        <div class="col-md-4"><strong>Título:</strong></div>
                        <div class="col-md-8">@Model.Titulo</div>
                    </div>

                    <div class="row mb-2">
                        <div class="col-md-4"><strong>Autor:</strong></div>
                        <div class="col-md-8">@Model.Autor</div>
                    </div>

                    <div class="row mb-2">
                        <div class="col-md-4"><strong>Tema:</strong></div>
                        <div class="col-md-8">@Model.Tema</div>
                    </div>

                    <div class="row mb-2">
                        <div class="col-md-4"><strong>Editorial:</strong></div>
                        <div class="col-md-8">@Model.Editorial</div>
                    </div>

                    <div class="row mb-2">
                        <div class="col-md-4"><strong>Año de Publicación:</strong></div>
                        <div class="col-md-8">@Model.AnioPublicacion</div>
                    </div>

                    <div class="row mb-2">
                        <div class="col-md-4"><strong>Páginas:</strong></div>
                        <div class="col-md-8">@Model.Paginas</div>
                    </div>

                    <div class="row mb-2">
                        <div class="col-md-4"><strong>Categoría:</strong></div>
                        <div class="col-md-8">@Model.Categoria</div>
                    </div>

                    <div class="row mb-2">
                        <div class="col-md-4"><strong>Material:</strong></div>
                        <div class="col-md-8">@Model.Material</div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-4"><strong>Copias:</strong></div>
                        <div class="col-md-8">@Model.Copias</div>
                    </div>

                    <form asp-action="Delete" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />
                        
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-danger">
                                Confirmar Eliminación
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                Cancelar
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
